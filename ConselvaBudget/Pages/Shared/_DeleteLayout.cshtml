@inject IViewLocalizer Localizer
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1 class="pb-2 border-bottom">@ViewData["Title"]</h1>

<div class="alert alert-danger mb-0" role="alert">
    <h2 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> @Localizer["DELETE_CONFIRMATION"]</h2>
    <dl class="row">
        @RenderBody()
    </dl>
    <hr>
    <p>@Localizer["DELETE_RELATED_DATA"]</p>
    <p><b>@Localizer["DELETE_UNDONE"]</b></p>
    <form method="post">
        @RenderSection("DeleteFormContents", required: true)
    </form>
</div>
