@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="alert alert-danger mb-0 d-flex align-items-center" role="alert">
    <div class="fs-1 me-3">
        <i class="bi bi-exclamation-triangle-fill"></i>
    </div>
    <div>
        <h1 class="alert-heading">@ViewData["Title"]</h1>
        <p>Are you sure you want to delete this?</p>
        <dl class="row">
            @RenderBody()
        </dl>
        <hr>
        <p>This will also delete all its related data. This action cannot be undone.</p>
        <form method="post">
            @RenderSection("DeleteFormContents", required: true)
        </form>
    </div>
</div>
