@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = $"{ViewData["Action"]} {ViewData["Entity"]}";
}

<h1 class="pb-2 border-bottom">@ViewData["Action"]</h1>

<div class="row g-4">
    <div class="col-lg-5 order-lg-last">
        <div class="alert alert-secondary d-flex" role="alert">
            <div class="fs-4 me-3">
                <i class="bi bi-info-circle-fill"></i>
            </div>
            <div>
                @RenderSection("FormInfo", required: true)
                <hr>
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        <h2 class="h4">@ViewData["Entity"]</h2>
        <form method="post" class="row g-3">
            @RenderBody()
        </form>
    </div>
</div>

@section CSS {
    @await RenderSectionAsync("FormCSS", required: false)
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await RenderSectionAsync("FormScripts", required: false);
    }
}
