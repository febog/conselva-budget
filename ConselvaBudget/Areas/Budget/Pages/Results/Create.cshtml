@page
@model CreateModel

@{
    Layout = "/Pages/Shared/_CreateEditLayout.cshtml";
    ViewData["Title"] = "Create Result";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="col-12">
    <label asp-for="Result.ProjectId" class="form-label"></label>
    <select asp-for="Result.ProjectId" class="form-select" asp-items="@Model.ProjectNameSL"></select>
    <span asp-validation-for="Result.ProjectId" class="text-danger"></span>
</div>
<div class="col-12">
    <label asp-for="Result.Name" class="form-label"></label>
    <input asp-for="Result.Name" class="form-control" />
    <span asp-validation-for="Result.Name" class="text-danger"></span>
</div>
<div class="col-12">
    <label asp-for="Result.Description" class="form-label"></label>
    <input asp-for="Result.Description" class="form-control" />
    <span asp-validation-for="Result.Description" class="text-danger"></span>
</div>
<div class="col-12">
    <input class="btn btn-primary" type="submit" value="Create">
    <a class="btn btn-secondary" asp-page="/Projects/Manage" asp-route-id="@Request.Query["projectId"]">Cancel</a>
</div>

@section FormInfo {
    <h5 class="card-title">Card title</h5>
    <h6 class="card-subtitle mb-2 text-body-secondary">Card subtitle</h6>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
}
