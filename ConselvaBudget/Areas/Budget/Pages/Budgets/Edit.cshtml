@page
@inject IStringLocalizer<Resources.SharedResource> SharedLocalizer
@inject IViewLocalizer Localizer
@model EditModel

@{
    Layout = "/Pages/Shared/_CreateEditLayout.cshtml";
    ViewData["Action"] = @SharedLocalizer["EDIT"];
    ViewData["Entity"] = @SharedLocalizer["ENTITY_ACTIVITY_BUDGET_NAME"];
}

@section PreForm {
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ActivityBudget.AccountAssignment)
        </dt>
        <dd class="col-sm-9">
            @ViewData["AccountAssignment"]
        </dd>
    </dl>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="ActivityBudget.Id" />
<div class="col-12 col-sm-4">
    <label asp-for="ActivityBudget.Amount" class="form-label"></label>
    <div class="input-group">
        <span class="input-group-text">$</span>
        <input asp-for="ActivityBudget.Amount" class="form-control" />
    </div>
    <span asp-validation-for="ActivityBudget.Amount" class="text-danger"></span>
</div>
<div class="col-12 col-sm-8">
    <label asp-for="ActivityBudget.EquivalentAccount" class="form-label"></label>
    <input asp-for="ActivityBudget.EquivalentAccount" class="form-control" />
    <div id="accounts-select-help" class="form-text">
        @Localizer["EQUIVALENT_ACCOUNT_HELP"]
    </div>
    <span asp-validation-for="ActivityBudget.EquivalentAccount" class="text-danger"></span>
</div>
<div class="col-12">
    <label asp-for="ActivityBudget.Comments" class="form-label"></label>
    <input asp-for="ActivityBudget.Comments" class="form-control" />
    <span asp-validation-for="ActivityBudget.Comments" class="text-danger"></span>
</div>
<div class="col-12">
    <input class="btn btn-primary" type="submit" value="Save">
    <a class="btn btn-secondary"
       asp-page="/Projects/Manage"
       asp-route-id="@Model.ActivityBudget.Activity.Result.ProjectId"
       asp-fragment="activity-@Model.ActivityBudget.ActivityId">
        Cancel
    </a>
</div>
