@page
@model ManageModel

@{
    ViewData["Title"] = "Manage Project";
}

<h1 class="border-bottom pb-2">@Html.DisplayFor(model => model.Project.Name)</h1>

<p>@Html.DisplayFor(model => model.Project.Comments)</p>

<p>
    <a class="btn btn-primary" asp-page="/Results/Create" asp-route-projectId="@Model.Project.Id">Create Result</a>
</p>

@foreach (var result in Model.Project.Results)
{
    <div class="card mb-2" id="result-@result.Id">
        <div class="card-header d-flex align-items-center gap-2">
            <h2 class="h5 mb-0 flex-grow-1">@Html.DisplayFor(modelItem => result.Name)</h2>
            <div class="d-flex gap-1">
                <button class="btn btn-success btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#result-body-@result.Id" aria-expanded="false" aria-controls="result-body-@result.Id">
                    Collapse
                </button>
                <a class="btn btn-secondary btn-sm" asp-page="/Results/Edit" asp-route-id="@result.Id">Edit</a>
                <a class="btn btn-danger btn-sm" asp-page="/Results/Delete" asp-route-id="@result.Id">Delete</a>
            </div>
        </div>
        <div class="card-body collapse show" id="result-body-@result.Id">
            <p>
                <a class="btn btn-primary" asp-page="/Activities/Create" asp-route-projectId="@Model.Project.Id" asp-route-resultId="@result.Id">Create Activity</a>
            </p>
            <h3 class="h6 text-body-secondary">Activities</h3>
            <ul class="list-group">
                @foreach (var activity in result.Activities)
                {
                    <li class="list-group-item" id="activity-@activity.Id">
                        <div class="d-flex w-100 align-items-center gap-2">
                            <h4 class="h5 mb-2 flex-grow-1">@Html.DisplayFor(model => activity.Name)</h4>
                            <div class="d-flex gap-1">
                                <button class="btn btn-success btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#activity-body-@activity.Id" aria-expanded="false" aria-controls="activity-body-@activity.Id">
                                    Collapse
                                </button>
                                <a class="btn btn-secondary btn-sm" asp-page="/Activities/Edit" asp-route-id="@activity.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-page="/Activities/Delete" asp-route-id="@activity.Id">Delete</a>
                            </div>
                        </div>
                        <div class="collapse show" id="activity-body-@activity.Id">
                            <p>
                                @Html.DisplayNameFor(model => activity.DueDate): @Html.DisplayFor(model => activity.DueDate)
                            </p>
                            <p>
                                <a class="btn btn-secondary btn-sm" asp-page="/Budgets/Create" asp-route-projectId="@Model.Project.Id" asp-route-activityId="@activity.Id">Add budget</a>
                            </p>
                            @if (activity.ActivityBudgets.Count > 0)
                            {
                                <h4 class="h6 text-body-secondary">Budget</h4>
                                <table class="table table-sm table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => activity.ActivityBudgets.ToList()[0].AccountAssignment.Account)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => activity.ActivityBudgets.ToList()[0].Amount)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => activity.ActivityBudgets.ToList()[0].Comments)
                                            </th>
                                            <th style="width: 1px; white-space:nowrap;"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var budget in activity.ActivityBudgets.OrderBy(b => b.AccountAssignment.DisplayName))
                                        {
                                            <tr>
                                                <td class="align-middle">
                                                    @Html.DisplayFor(modelItem => budget.AccountAssignment.DisplayName)
                                                </td>
                                                <td class="align-middle">
                                                    @Html.DisplayFor(modelItem => budget.Amount)
                                                </td>
                                                <td class="align-middle">
                                                    @Html.DisplayFor(modelItem => budget.Comments)
                                                </td>
                                                <td class="align-middle">
                                                    <div class="d-flex gap-1 justify-content-center">
                                                        <button class="btn btn-success btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#budget-expenses-@budget.Id" aria-expanded="false" aria-controls="budget-expenses-@budget.Id">
                                                            Expenses
                                                        </button>
                                                        <a class="btn btn-secondary btn-sm" asp-page="/Budgets/Edit" asp-route-id="@budget.Id">Edit</a>
                                                        <a class="btn btn-danger btn-sm" asp-page="/Budgets/Delete" asp-route-id="@budget.Id">Delete</a>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr class="collapse" id="budget-expenses-@budget.Id">
                                                <td colspan="4" class="p-3">
                                                    @if (budget.Expenses.Count > 0)
                                                    {
                                                        <h5 class="h6 text-body-secondary">Expenses</h5>
                                                        <table class="table table-sm table-bordered table-striped">
                                                            <thead>
                                                                <tr>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => budget.Expenses.ToList()[0].Description)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => budget.Expenses.ToList()[0].Vendor)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => budget.Expenses.ToList()[0].Amount)
                                                                    </th>
                                                                    <th>
                                                                        @Html.DisplayNameFor(model => budget.Expenses.ToList()[0].ExpenseDate)
                                                                    </th>
                                                                    <th style="width: 1px; white-space:nowrap;"></th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var expense in budget.Expenses)
                                                                {
                                                                    <tr>
                                                                        <td class="align-middle">
                                                                            @Html.DisplayFor(modelItem => expense.Description)
                                                                        </td>
                                                                        <td class="align-middle">
                                                                            @Html.DisplayFor(modelItem => expense.Vendor)
                                                                        </td>
                                                                        <td class="align-middle">
                                                                            @Html.DisplayFor(modelItem => expense.Amount)
                                                                        </td>
                                                                        <td class="align-middle">
                                                                            @Html.DisplayFor(modelItem => expense.ExpenseDate)
                                                                        </td>
                                                                        <td class="align-middle">
                                                                            <div class="d-flex gap-1 justify-content-center">
                                                                                <a class="btn btn-success btn-sm" asp-area="Expenses" asp-page="/Expenses/Details" asp-route-id="@expense.Id">Details</a>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    }
                                                    else
                                                    {
                                                        <div class="alert alert-info mb-0" role="alert">
                                                            <span>No expenses have been made to this budget.</span>
                                                        </div>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0" role="alert">
                                    <span>This activity has no budget.</span>
                                </div>
                            }
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
}


