@page
@model ManageModel

@{
    ViewData["Title"] = "Manage Project";
}

<h1 class="border-bottom pb-2">@Html.DisplayFor(model => model.Project.Name)</h1>

<p>@Html.DisplayFor(model => model.Project.Comments)</p>

<p>
    <a class="btn btn-primary" asp-page="/Results/Create" asp-route-projectId="@Model.Project.Id">Create Result</a>
</p>

@foreach (var result in Model.Project.Results)
{
    <div class="card mb-2" id="result_@result.Id">
        <div class="card-header d-flex align-items-center gap-2">
            <h2 class="h5 mb-0 flex-grow-1">@Html.DisplayFor(modelItem => result.Name)</h2>
            <div class="d-flex gap-1">
                <button class="btn btn-success btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#result_body_@result.Id" aria-expanded="false" aria-controls="result_body_@result.Id">
                    Collapse
                </button>
                <a class="btn btn-secondary btn-sm" asp-page="/Results/Edit" asp-route-id="@result.Id">Edit</a>
                <a class="btn btn-danger btn-sm" asp-page="/Results/Delete" asp-route-id="@result.Id">Delete</a>
            </div>
        </div>
        <div class="card-body collapse show" id="result_body_@result.Id">
            <p>
                <a class="btn btn-primary" asp-page="/Activities/Create" asp-route-projectId="@Model.Project.Id" asp-route-resultId="@result.Id">Create Activity</a>
            </p>
            <h3 class="h6 text-body-secondary">Activities</h3>
            <ul class="list-group">
                @foreach (var activity in result.Activities)
                {
                    <li class="list-group-item" id="activity_@activity.Id">
                        <div class="d-flex w-100 justify-content-between">
                            <h4 class="h5 mb-2">@Html.DisplayFor(model => activity.Name)</h4>
                            <div class="d-flex gap-1">
                                <button class="btn btn-success btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#activity_body_@activity.Id" aria-expanded="false" aria-controls="activity_body_@activity.Id">
                                    Collapse
                                </button>
                                <a class="btn btn-secondary btn-sm" asp-page="/Activities/Edit" asp-route-id="@activity.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-page="/Activities/Delete" asp-route-id="@activity.Id">Delete</a>
                            </div>
                        </div>
                        <div class="collapse show" id="activity_body_@activity.Id">
                            <p>
                                @Html.DisplayNameFor(model => activity.DueDate): @Html.DisplayFor(model => activity.DueDate)
                            </p>
                            <p>
                                <a class="btn btn-secondary btn-sm" asp-page="/Budgets/Create" asp-route-projectId="@Model.Project.Id" asp-route-activityId="@activity.Id">Add budget</a>
                            </p>
                            @if (activity.ActivityBudgets.Count > 0)
                            {
                                <table class="table table-sm table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => activity.ActivityBudgets.ToList()[0].AccountAssignment.Account.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => activity.ActivityBudgets.ToList()[0].Amount)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => activity.ActivityBudgets.ToList()[0].Comments)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var budget in activity.ActivityBudgets)
                                        {
                                            <tr>
                                                <td class="align-middle">
                                                    @Html.DisplayFor(modelItem => budget.AccountAssignment.Account.Name)
                                                </td>
                                                <td class="align-middle">
                                                    @Html.DisplayFor(modelItem => budget.Amount)
                                                </td>
                                                <td class="align-middle">
                                                    @Html.DisplayFor(modelItem => budget.Comments)
                                                </td>
                                                <td class="align-middle">
                                                    <div class="d-flex gap-1 justify-content-center">
                                                        <a class="btn btn-secondary btn-sm" asp-page="/Budgets/Edit" asp-route-id="@budget.Id">Edit</a>
                                                        <a class="btn btn-danger btn-sm" asp-page="/Budgets/Delete" asp-route-id="@budget.Id">Delete</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0" role="alert">
                                    <span>This activity has no budget.</span>
                                </div>
                            }
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
}


<h2>Additional project details</h2>

