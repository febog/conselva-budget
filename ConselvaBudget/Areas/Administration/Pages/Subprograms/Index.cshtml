@page
@model ConselvaBudget.Areas.Administration.Pages.Subprograms.IndexModel

@{
    ViewData["Title"] = "Subprograms";
}

<h1>@ViewData["Title"]</h1>

<p><a class="btn btn-success" asp-area="Administration" asp-page="/Index">Go to Administration dashboard</a></p>

<table class="table table-sm table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BusinessSubprograms[0].Program)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessSubprograms[0].Subprogram)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BusinessSubprograms)
        {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Program)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Subprogram)
                </td>
            </tr>
        }
    </tbody>
</table>