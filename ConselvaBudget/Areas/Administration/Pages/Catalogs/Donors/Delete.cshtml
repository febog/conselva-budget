@page
@inject IStringLocalizer<Resources.SharedResource> Localizer
@model DeleteModel

@{
    Layout = "/Pages/Shared/_DeleteLayout.cshtml";
    ViewData["Title"] = $"{Localizer["DELETE"]} {Localizer["ENTITY_DONOR_NAME"]}";
}

<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Donor.ShortName)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.Donor.ShortName)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Donor.FullName)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.Donor.FullName)
</dd>

@section DeleteFormContents {
    <input type="hidden" asp-for="Donor.Id" />
    <delete-confirm-button></delete-confirm-button>
    <cancel-button asp-page="./Index"></cancel-button>
}
