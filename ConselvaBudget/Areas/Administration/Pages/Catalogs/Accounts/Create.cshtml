@page
@inject IStringLocalizer<Resources.SharedResource> Localizer
@inject IHtmlLocalizer<Resources.SharedResource> HtmlLocalizer
@model CreateModel

@{
    Layout = "/Pages/Shared/_CreateEditLayout.cshtml";
    ViewData["Title"] = @Localizer["ENTITY_ACCOUNT_CREATE"];
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="col-12">
    <label asp-for="Account.Code" class="form-label"></label>
    <input asp-for="Account.Code" class="form-control" />
    <span asp-validation-for="Account.Code" class="text-danger"></span>
</div>
<div class="col-12">
    <label asp-for="Account.Name" class="form-label"></label>
    <input asp-for="Account.Name" class="form-control" />
    <span asp-validation-for="Account.Name" class="text-danger"></span>
</div>
<div class="col-12">
    <label asp-for="Account.Description" class="form-label"></label>
    <input asp-for="Account.Description" class="form-control" />
    <span asp-validation-for="Account.Description" class="text-danger"></span>
</div>
<div class="col-12">
    <create-button></create-button>
    <cancel-button asp-page="./Index"></cancel-button>
</div>

@section FormInfoCardBody {
    <h5 class="card-title">@Localizer["ENTITY_ACCOUNT_CATALOG_NAME"]</h5>
    <p class="card-text">@HtmlLocalizer["ENTITY_ACCOUNT_HELP"]</p>
}
