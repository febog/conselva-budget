@page
@inject IStringLocalizer<Resources.SharedResource> Localizer
@model DeleteModel

@{
    Layout = "/Pages/Shared/_DeleteLayout.cshtml";
    ViewData["Title"] = $"{Localizer["DELETE"]} {Localizer["ENTITY_ORGANIZATION_NAME"]}";
}

<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Organization.Code)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.Organization.Code)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Organization.Name)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.Organization.Name)
</dd>

@section DeleteFormContents {
    <input type="hidden" asp-for="Organization.Id" />
    <delete-confirm-button></delete-confirm-button>
    <cancel-button asp-page="./Index"
                   asp-fragment="program-@Model.Organization.Id"></cancel-button>
}
