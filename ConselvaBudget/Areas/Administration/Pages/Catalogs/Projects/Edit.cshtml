@page
@inject IStringLocalizer<Resources.SharedResource> Localizer
@inject IHtmlLocalizer<Resources.SharedResource> HtmlLocalizer
@inject IStringLocalizer<Models.Project> ProjectLocalizer
@model EditModel

@{
    Layout = "/Pages/Shared/_CreateEditLayout.cshtml";
    ViewData["Action"] = @Localizer["EDIT"];
    ViewData["Entity"] = @Localizer["ENTITY_PROJECT_NAME"];
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Project.Id" />
<div class="col-12">
    <label asp-for="Project.DonorId" class="form-label"></label>
    <select asp-for="Project.DonorId" class="form-select" asp-items="@Model.DonorSL">
        <option value="">@ProjectLocalizer["SELECT_DONOR"]</option>
    </select>
    <span asp-validation-for="Project.DonorId" class="text-danger"></span>
</div>
<div class="col-12">
    <label asp-for="Project.Name" class="form-label"></label>
    <input asp-for="Project.Name" class="form-control" />
    <span asp-validation-for="Project.Name" class="text-danger"></span>
</div>
<div class="col-6">
    <label asp-for="Project.Segment" class="form-label"></label>
    <input asp-for="Project.Segment" class="form-control" />
    <span asp-validation-for="Project.Segment" class="text-danger"></span>
</div>
<div class="col-6">
    <label asp-for="Project.ShortName" class="form-label"></label>
    <input asp-for="Project.ShortName" class="form-control" />
    <span asp-validation-for="Project.ShortName" class="text-danger"></span>
</div>
<div class="col-sm-6">
    <label asp-for="Project.StartDate" class="form-label"></label>
    <input asp-for="Project.StartDate" class="form-control" />
    <span asp-validation-for="Project.StartDate" class="text-danger"></span>
</div>
<div class="col-sm-6">
    <label asp-for="Project.EndDate" class="form-label"></label>
    <input asp-for="Project.EndDate" class="form-control" />
    <span asp-validation-for="Project.EndDate" class="text-danger"></span>
</div>
<div class="col-12">
    <label asp-for="Project.Description" class="form-label"></label>
    <input asp-for="Project.Description" class="form-control" />
    <span asp-validation-for="Project.Description" class="text-danger"></span>
</div>
<div class="col-12">
    <save-button></save-button>
    <cancel-button asp-page="./Index"></cancel-button>
</div>

@section PreForm {
    <h2 class="h4">@Localizer["ENTITY_PROJECT_CATALOG_NAME"]</h2>
    @HtmlLocalizer["ENTITY_PROJECT_HELP"]
}
