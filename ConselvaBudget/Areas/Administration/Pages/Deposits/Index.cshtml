@page
@model IndexModel

@{
    Layout = "/Pages/Shared/_IndexLayout.cshtml";
    ViewData["Title"] = "Deposits";
}

@section Introduction {
    <p>Deposit management.</p>

    <p><a class="btn btn-primary" asp-page="Create">Add deposit</a></p>
}

@section Headers {
    <th>
        @Html.DisplayNameFor(model => model.Deposit[0].Amount)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Deposit[0].Date)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Deposit[0].Comments)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Deposit[0].Project)
    </th>
}

@foreach (var item in Model.Deposit)
{
    <tr>
        <td class="align-middle">
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td class="align-middle">
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td class="align-middle">
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
        <td class="align-middle">
            @Html.DisplayFor(modelItem => item.Project.Name)
        </td>
        <td class="align-middle">
            <table-buttons>
                <edit-button asp-page="Edit" asp-route-id="@item.Id"></edit-button>
                <delete-button asp-page="Delete" asp-route-id="@item.Id"></delete-button>
            </table-buttons>
        </td>
    </tr>
}
