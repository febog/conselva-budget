@page
@model CreateModel

@{
    Layout = "/Pages/Shared/_CreateEditLayout.cshtml";
    ViewData["Title"] = "Create Project";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="col-12">
    <label asp-for="Project.Name" class="form-label"></label>
    <input asp-for="Project.Name" class="form-control" />
    <span asp-validation-for="Project.Name" class="text-danger"></span>
</div>
<div class="col-6">
    <label asp-for="Project.Segment" class="form-label"></label>
    <input asp-for="Project.Segment" class="form-control" />
    <span asp-validation-for="Project.Segment" class="text-danger"></span>
</div>
<div class="col-6">
    <label asp-for="Project.ShortName" class="form-label"></label>
    <input asp-for="Project.ShortName" class="form-control" />
    <span asp-validation-for="Project.ShortName" class="text-danger"></span>
</div>
<div class="col-sm-6">
    <label asp-for="Project.StartDate" class="form-label"></label>
    <input asp-for="Project.StartDate" class="form-control" />
    <span asp-validation-for="Project.StartDate" class="text-danger"></span>
</div>
<div class="col-sm-6">
    <label asp-for="Project.EndDate" class="form-label"></label>
    <input asp-for="Project.EndDate" class="form-control" />
    <span asp-validation-for="Project.EndDate" class="text-danger"></span>
</div>
<div class="col-12">
    <label asp-for="Project.Comments" class="form-label"></label>
    <input asp-for="Project.Comments" class="form-control" />
    <span asp-validation-for="Project.Comments" class="text-danger"></span>
</div>
<div class="col-12">
    <input class="btn btn-primary" type="submit" value="Create">
    <a class="btn btn-secondary" asp-page="/Index" asp-fragment="projects">Cancel</a>
</div>

@section FormInfoCardBody {
    <h5 class="card-title">Card title</h5>
    <h6 class="card-subtitle mb-2 text-body-secondary">Card subtitle</h6>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
}
