@page
@inject IStringLocalizer<Resources.SharedResource> SharedLocalizer
@inject IHtmlLocalizer<Resources.SharedResource> HtmlSharedLocalizer
@inject IViewLocalizer Localizer
@model IndexModel
@{
    ViewData["Title"] = @SharedLocalizer["AREA_ADMINISTRATION"];
}

<h1 class="pb-2 border-bottom">@ViewData["Title"]</h1>

<h2 class="h4">@Localizer["TABLE_OF_CONTENTS"]</h2>
<ul>
    <li>
        <a href="#catalogs">@Localizer["CATALOGS"]</a>
        <ul>
            <li><a href="#accounts">@SharedLocalizer["ENTITY_ACCOUNT_CATALOG_NAME"]</a></li>
            <li><a href="#organizations">@SharedLocalizer["ENTITY_ORGANIZATION_CATALOG_NAME"]</a></li>
            <li><a href="#donors">Donors</a></li>
            <li><a href="#equivalent-accounts">Equivalent Accounts</a></li>
            <li><a href="#projects">Projects</a></li>
        </ul>
    </li>
    <li>
        <a href="#finance">@Localizer["FINANCE"]</a>
        <ul>
            <li><a href="#deposits">Deposits</a></li>
        </ul>
    </li>
    <li>
        <a href="#inventory">@Localizer["INVENTORY"]</a>
        <ul>
            <li><a href="#vehicles">Vehicles</a></li>
        </ul>
    </li>
    <li>
        <a href="#access">@Localizer["ACCESS"]</a>
        <ul>
            <li><a href="#roles">Roles</a></li>
        </ul>
    </li>
</ul>


<h2 class="pb-2 border-bottom" id="catalogs">@Localizer["CATALOGS"]</h2>
<p>@Localizer["CATALOGS_DESCRIPTION"]</p>

<h3 id="accounts">@SharedLocalizer["ENTITY_ACCOUNT_CATALOG_NAME"]</h3>
@HtmlSharedLocalizer["ENTITY_ACCOUNT_HELP"]
<p>
    <a class="btn btn-primary" asp-page="Catalogs/Accounts/Index">@SharedLocalizer["ENTITY_ACCOUNT_CATALOG_NAME"]</a>
</p>

<h3 id="organizations">@SharedLocalizer["ENTITY_ORGANIZATION_CATALOG_NAME"]</h3>
@HtmlSharedLocalizer["ENTITY_ORGANIZATION_HELP"]
<p>
    <a class="btn btn-primary" asp-page="Catalogs/Organizations/Index">@SharedLocalizer["ENTITY_ORGANIZATION_CATALOG_NAME"]</a>
</p>

<h2 class="pb-2 border-bottom" id="finance">@Localizer["FINANCE"]</h2>
<p>@Localizer["FINANCE_DESCRIPTION"]</p>

<h2 class="pb-2 border-bottom" id="inventory">@Localizer["INVENTORY"]</h2>
<p>@Localizer["INVENTORY_DESCRIPTION"]</p>

<h2 class="pb-2 border-bottom" id="access">@Localizer["ACCESS"]</h2>
<p>@Localizer["ACCESS_DESCRIPTION"]</p>
<h2>Roles</h2>

<p>Add or remove users to roles.</p>
<p>
    <a class="btn btn-primary" asp-page="Access/Roles/Index">Role management</a>
</p>