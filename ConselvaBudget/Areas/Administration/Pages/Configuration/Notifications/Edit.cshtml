@page
@inject IStringLocalizer<Resources.SharedResource> SharedLocalizer
@model EditModel

@{
    Layout = "/Pages/Shared/_CreateEditLayout.cshtml";
    ViewData["Action"] = @SharedLocalizer["EDIT"];
    ViewData["Entity"] = @SharedLocalizer["ENTITY_NOTIFICATION_NAME"];
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="NotificationRecipient.AspNetUserId" />
<div class="col-12">
    <label asp-for="NotificationRecipient.NotificationEmail" class="form-label"></label>
    <input asp-for="NotificationRecipient.NotificationEmail" class="form-control" />
    <span asp-validation-for="NotificationRecipient.NotificationEmail" class="text-danger"></span>
</div>
<div class="col-12">
    <create-button></create-button>
    <cancel-button asp-page="./Index"></cancel-button>
</div>
