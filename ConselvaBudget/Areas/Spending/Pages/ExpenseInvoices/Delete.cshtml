@page
@inject IStringLocalizer<Resources.SharedResource> Localizer
@model DeleteModel

@{
    Layout = "/Pages/Shared/_DeleteLayout.cshtml";
    ViewData["Title"] = $"{Localizer["DELETE"]} {Localizer["ENTITY_EXPENSE_INVOICE_NAME"]}";
}

<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.ExpenseInvoice.Description)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.ExpenseInvoice.Description)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.ExpenseInvoice.Amount)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.ExpenseInvoice.Amount)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.ExpenseInvoice.TaxWithheld)
</dt>
<dd class="col-sm-10">
    @{
        var taxWithheldAmount = string.Format("{0:C}", Model.ExpenseInvoice.TaxWithheld ?? 0);
    }
    @Html.DisplayFor(model => taxWithheldAmount)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.ExpenseInvoice.Vendor)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.ExpenseInvoice.Vendor)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.ExpenseInvoice.InvoiceDate)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.ExpenseInvoice.InvoiceDate)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.ExpenseInvoice.InvoiceNumber)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.ExpenseInvoice.InvoiceNumber)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.ExpenseInvoice.PdfUrl)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.ExpenseInvoice.PdfUrl)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.ExpenseInvoice.XmlUrl)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.ExpenseInvoice.XmlUrl)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.ExpenseInvoice.Request)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.ExpenseInvoice.Request.Description)
</dd>

@section DeleteFormContents {
    <input type="hidden" asp-for="ExpenseInvoice.Id" />
    <delete-confirm-button></delete-confirm-button>
    <cancel-button asp-page="/Requests/Details" asp-route-id="@Model.ExpenseInvoice.RequestId"></cancel-button>
}
