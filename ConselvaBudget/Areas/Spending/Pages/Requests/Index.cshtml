@page
@inject IStringLocalizer<Resources.SharedResource> SharedLocalizer
@inject IViewLocalizer Localizer
@model IndexModel

@{
    ViewData["Title"] = @Localizer["PAGE_TITLE"];
}

<h1 class="pb-2 border-bottom">@ViewData["Title"]</h1>

<p>@Localizer["PAGE_DESCRIPTION"]</p>

<p><a class="btn btn-primary" asp-page="SelectProject"><i class="bi bi-plus-lg"></i> @Localizer["BUTTON_CREATE_REQUEST"]</a></p>

<h2>@Localizer["REQUEST_NAVIGATION_TITLE"]</h2>

<form method="get" class="mb-3" asp-page="Details">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label for="request-navigator-input" class="col-form-label">@Localizer["REQUEST_NAVIGATION_LABEL"]</label>
        </div>
        <div class="col-auto">
            <input type="text"
                name="id"
                id="request-navigator-input"
                class="form-control"
                aria-describedby="request-navigator-help"
                placeholder="@Localizer["REQUEST_NAVIGATION_LABEL"]">
        </div>
        <div class="col-auto">
            <input class="btn btn-success" type="submit" value="@Localizer["REQUEST_NAVIGATION_SUBMIT"]">
        </div>
        <div class="col-auto">
            <span id="request-navigator-help" class="form-text">
                @Localizer["REQUEST_NAVIGATION_DESCRIPTION"]
            </span>
        </div>
    </div>
</form>

<h2>@Localizer["TITLE_CREATED_REQUESTS"]</h2>

<p><a class="btn btn-light"><i class="bi bi-file-earmark-plus"></i> @Localizer["BUTTON_CREATED_REQUESTS"]</a></p>

@if (Model.SpendingRequests.Where(r => r.Status == Models.RequestStatus.Created).Any())
{
    <table class="table table-bordered table-striped caption-top">
        <caption>@Localizer["TITLE_CREATED_REQUESTS"]</caption>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SpendingRequests[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SpendingRequests[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SpendingRequests[0].Activity.Result.Project)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SpendingRequests[0].Activity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SpendingRequests[0].CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SpendingRequests[0].ModifiedDate)
                </th>
                <th style="width: 1px; white-space:nowrap;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SpendingRequests.Where(r => r.Status == Models.RequestStatus.Created))
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Activity.Result.Project.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Activity.Code)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>
                    <td class="align-middle">
                        <table-buttons>
                            <details-button asp-page="Details" asp-route-id="@item.Id"></details-button>
                            <delete-button asp-page="Delete" asp-route-id="@item.Id"></delete-button>
                        </table-buttons>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-light" role="alert">
        @Localizer["NO_REQUEST_ALERT"]
    </div>
}

