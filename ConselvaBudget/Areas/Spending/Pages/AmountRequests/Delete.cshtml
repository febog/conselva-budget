@page
@inject IStringLocalizer<Resources.SharedResource> Localizer
@model DeleteModel

@{
    Layout = "/Pages/Shared/_DeleteLayout.cshtml";
    ViewData["Title"] = $"{Localizer["DELETE"]} {Localizer["ENTITY_AMOUNT_REQUEST_NAME"]}";
}

<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.AmountRequest.Description)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.AmountRequest.Description)
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.AmountRequest.Amount)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.AmountRequest.Amount)
</dd>

@section DeleteFormContents {
    <input type="hidden" asp-for="AmountRequest.Id" />
    <delete-confirm-button></delete-confirm-button>
    <cancel-button asp-page="/Requests/Details" asp-route-id="@Model.AmountRequest.RequestId"></cancel-button>
}