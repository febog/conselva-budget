@page
@model ConselvaBudget.Areas.Spending.Pages.Expenses.DetailsModel
@using ConselvaBudget.Authorization
@using ConselvaBudget.Models

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Expense</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expense.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expense.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expense.Vendor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expense.Vendor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expense.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expense.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expense.ExpenseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expense.ExpenseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expense.ModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expense.ModifiedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expense.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expense.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expense.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expense.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expense.Comments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expense.Comments)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Expense.ActivityBudget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Expense.ActivityBudget.Id)
        </dd>
    </dl>
</div>

@if(User.IsInRole(Roles.Management) && Model.Expense.Status != ExpenseStatus.Completed)
{
    <form style="display:inline;" method="post">
        <input type="hidden" name="id" value="@Model.Expense.Id" />
        <input type="hidden" name="status" value="@ExpenseStatus.Approved" />
        <button type="submit" class="btn btn-success">Approve</button>
    </form>
    <form style="display:inline;" method="post">
        <input type="hidden" name="id" value="@Model.Expense.Id" />
        <input type="hidden" name="status" value="@ExpenseStatus.Rejected" />
        <button type="submit" class="btn btn-danger">Reject</button>
    </form>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Expense?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
